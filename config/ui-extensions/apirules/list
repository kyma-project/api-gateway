- name: service
  source: '$string(spec.service.name) ? ($string(spec.service.name) & " (port: " & $string(spec.service.port) & ")") : ""'
  widget: ResourceLink
  resource:
    name: $root.spec.service.name
    namespace: $root.metadata.namespace
    kind: '"Service"'
- name: status
  widget: Badge
  highlights:
    positive:
      - 'Ready'
    critical:
      - 'Error'
    warning:
      - 'Warning'
  source: 'status.state ? status.state : "Unknown"'
  description: status.description
- name: 'compatibility'
  source: metadata.annotations."gateway.kyma-project.io/original-version" ? 'notMigrated'
  visibility: metadata.annotations."gateway.kyma-project.io/original-version" = "v1beta1"
  widget: Badge
  highlights:
    critical:
      - 'notMigrated'
  description: This APIRule is not migrated to version v2. Refer to the migration guides for assistance.